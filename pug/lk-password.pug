extends ./_layout
include ./mixins/list/breads

block content

    div(class="wrapper__page article__top")

        -
            const breads = [
                {
                    name: 'Главная',
                    url: 'main.html',
                },
                {
                    name: 'Введите новый пароль',
                    url: '',
                },
            ];
        +breads-list(breads)
        h1 Введите новый пароль
        form(action="#" class="form form-col js-form-validate")
            div(class="form__line")
                label(class="form__label" for="enter-input-password-1") Пароль
                input(type="password" class="form__input" id="enter-input-password-1" minlength="8" required)
            div(class="form__line")
                label(class="form__label" for="enter-input-password-2") Повторите пароль
                input(type="password" class="form__input" id="enter-input-password-2" data-password-match="#enter-input-password-1" required)
            div(class="form__submit")
                button(type="submit" class="btn btn--green btn--100") Сохранить
